#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void poshyk(int *mas, int ch);

int main(int argc, char *argv[]) {
	int mas[20];
	int i, n;
		srand(time(0));
		for (i = 0; i < 20; i++){
		mas[i] = rand()%100;
		printf("mas[%d] = %d\n", i, mas[i]);
	}
	
	printf("Vvedite chislo:");
	scanf("%d", &n);
	
	printf("Vashe chislo e v takuh elementah:");
	poshyk(mas, n);
	
	return 0;
}

void poshyk(int *mas, int n){
	int i;
	
	for(i = 0; i < 20; i++){
		if(mas[i] == n)
		printf("%d, ", i);
	}
}
